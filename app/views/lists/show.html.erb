<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://dynamic-media-cdn.tripadvisor.com/media/photo-o/0a/34/70/95/parkway-beverley.jpg?w=1200&h=1200&s=1);">
  <div class="container text-center">
    <h1><%= @list.name %></h1>
  </div>
</div>


<div class="container">

  <div class="d-flex justify-content-between align-items-center">
    <h3><%= @list.name %></h3>
    <%= link_to 'Add a movie', new_list_bookmark_path(@list), class:'btn btn-success m-2' %>
  </div>

  <div class="cards">
    <% @list.bookmarks.each do |bookmark| %>
      <div class="card-trip">
        <%= image_tag bookmark.movie.poster_url, alt: "image"%>
        <div class="d-flex">
              <h2><%= bookmark.movie.title %></h2>
              <p class="px-2"><%= bookmark.movie.rating %> <i class="fa-solid fa-star"></i> </p>
            </div>
        <div class="card-trip-infos">
          <div>

            <p><%= bookmark.movie.overview %></p>
            <p><%= bookmark.comment %></p>
          </div>
          <h2 class="card-trip-pricing"><%= link_to 'Delete', bookmark_path(bookmark), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class:'delete' %></h2>
        </div>
      </div>
    <% end %>
  </div>
</div>

<br>
